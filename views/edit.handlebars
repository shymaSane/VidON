
<div class="container h-100 ">
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger mx-5 my-1" role="alert">
                {{this}}
            </div>
        {{/each}}       
    {{/if}}
    <div class="row my-auto mx-auto px-5"> 
        <div class="card card-body border-primary bg-light text-primary">
            <form action="/ideas" method="post">
                <div class="form-group">
                    <label for="title">Title:</label>
                    {{#if title}}
                    <input type="text" name="title" id="title" class="form-control" placeholder="Enter Idea Title" value="{{title}}">
                    {{else}}
                    <input type="text" name="title" id="title" class="form-control" placeholder="Enter Idea Title">
                    {{/if}}
                </div>
                <div class="form-group">
                    <label for="detailes">detailes:</label>
                    {{#if detailes}}
                    <textarea  name="detailes" id="detailes" class="form-control" placeholder="add your detailes here ...">{{detailes}}</textarea>
                    {{else}}
                    <textarea  name="detailes" id="detailes" class="form-control" placeholder="add your detailes here ..." ></textarea>
                    {{/if}}
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>