
<div class="container h-100 mt-5">
    <div class="row my-auto mx-auto px-5"> 
        <div class="card card-body border-primary bg-light text-primary">
            <h4>Edit Video Idea</h4>
            <form action="/ideas/{{idea._id}}?_method=put" method="post">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" class="form-control" placeholder="Enter Idea Title" value="{{idea.title}}">
                </div>
                <div class="form-group">
                    <label for="detailes">detailes:</label>
                    <textarea  name="detailes" id="detailes" class="form-control" placeholder="add your detailes here ...">{{idea.detailes}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>